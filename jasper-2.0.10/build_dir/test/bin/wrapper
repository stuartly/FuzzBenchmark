#! /bin/bash

function eecho()
{
	echo "$@" 1>&2
}

verbose=${JAS_TEST_WRAPPER_VERBOSE:-0}

abs_source_dir="/home/cloud/work/jasper-2.0.10"
abs_build_dir="/home/cloud/work/jasper-2.0.10/build_dir"
command="$1"
shift 1

export JAS_ABS_TOP_BUILDDIR="$abs_build_dir"
export JAS_TOP_BUILDDIR="$abs_build_dir"
export JAS_ABS_TOP_SRCDIR="$abs_source_dir"
export JAS_TOP_SRCDIR="$abs_source_dir"

export JAS_CMAKE_SOURCE_DIR="/home/cloud/work/jasper-2.0.10"
export JAS_CMAKE_BINARY_DIR="/home/cloud/work/jasper-2.0.10/build_dir"
export JAS_CMAKE_INSTALL_PREFIX="/home/cloud/work/jasper-2.0.10/installed"

if [ "$verbose" -gt 0 ]; then
	printenv | fgrep JAS_ 1>&2
	eecho "Running command $command"
fi
"$command" "$@"
