/* Supported on an individual virtual host basis:
** ----------------------------------------------
**  _PATH_FTPACCESS
**  _PATH_FTPUSERS
**  _PATH_PRIVATE
**  _PATH_FTPHOSTS
**  _PATH_CVT
**
** Set in a site's ftpaccess file
**  _PATH_XFERLOG
**
** Supported on a site-wide basis:
** --------------------------------
**  _PATH_FTPSERVERS
**  _PATH_EXECPATH
**  _PATH_PIDNAMES
**  _PATH_UTMP
**  _PATH_WTMP
**  ********************* _PATH_LASTLOG ** not used anywhere; removed
**  _PATH_BSHELL
**  _PATH_DEVNULL
*/
 
#define _PATH_FTPACCESS  "@CONFDIR@/ftpaccess"
#define _PATH_CVT        "@CONFDIR@/ftpconversions"
#define _PATH_FTPUSERS   "@CONFDIR@/ftpusers"
#define _PATH_PRIVATE    "@CONFDIR@/ftpgroups"
#define _PATH_FTPSERVERS "@CONFDIR@/ftpservers"
 
#ifdef  HOST_ACCESS
#define _PATH_FTPHOSTS   "@CONFDIR@/ftphosts"
#endif
 
/*
** Remainder of the defines apply on a site-wide basis
*/
 
#define _PATH_EXECPATH   "/bin/ftp-exec"
#define _PATH_PIDNAMES   "@PIDDIR@/ftp.pids-%s"
#define _PATH_XFERLOG    "@LOGDIR@/xferlog"
#define _PATH_EXECPATH  "/bin/ftp-exec"

#ifndef _PATH_UTMP
#ifdef UTMP_FILE
#define _PATH_UTMP UTMP_FILE
#else
#define _PATH_UTMP "@UTMP@"
#endif
#endif

#ifndef _PATH_WTMP
#ifdef WTMP_FILE
#define _PATH_WTMP WTMP_FILE
#else
#define _PATH_WTMP "@WTMP@"
#endif
#endif
/* #ifndef _PATH_LASTLOG
   #define _PATH_LASTLOG   "@LASTLOG@"
   #endif */

#ifndef _PATH_BSHELL
#define _PATH_BSHELL    "/bin/sh"
#endif

#ifndef _PATH_DEVNULL
#define _PATH_DEVNULL   "/dev/null"
#endif

/* In standalone mode: */
#define _PATH_FTPD_PID "@PIDDIR@/ftpd.pid"

#ifndef _PATHS_DEFINED_
extern char _path_ftpaccess[];
extern char _path_ftpusers[];
extern char _path_ftphosts[];
extern char _path_private[];
extern char _path_cvt[];
#endif
